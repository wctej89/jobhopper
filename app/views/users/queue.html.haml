:css
  .organizer {
    width: 80%;
    background-color: white;
    padding: 20px;
    margin: 0 auto;
    margin-top: 20px;
  }
  .job-list {
    list-style: none;
    font-size: 30px;
    border: 1px solid gray;
    border-radius: 5px;
    margin-bottom: 5px;
    font-family: 'lato';
  }
  .icon-plus {
    margin-left: 20px;
    font-size: 25px;
    color: rgb(90, 90, 90);
    padding-right: 10px;
    cursor: pointer;
  }
  .status-font {
    font-size: 15px
  }
  .organizer-dropdown {
    padding-left: 65px;
    padding-top: 5px;
    padding-bottom: 5px;
  }

%div.organizer
  %h1 Queue
  %form.scrape
    %input.link{type: 'text', placeholder: "Paste LinkedIn Url", name: 'url'}

  %div.current-jobs
    -current_user.jobs.each do |job|
      %li.job-list
        %span
          %i.icon-plus
          %span{style: "float:right; padding-right: 10px;"}= "#{JobList.find_by_job_id_and_list_id(job.id, current_user.list.id).status}"
          =job.company
        %div.organizer-dropdown{style: 'display: none;'}
          .status-font=link_to job.name, job.source_url
          .wrapper-dropdown-1{:id => "dd", :tabindex => "1", style: "margin-left: -2px; margin-top: 6px; display: block;"}
            %span.status-font= "Status: #{JobList.find_by_job_id_and_list_id(job.id, current_user.list.id).status}"
            %ul.dropdown.status-change-menu{:tabindex => "1", style: "background-color: #95a5a6; color: white;", id: job.id}
              %li.status-change{style: "list-style: none;"}
                %a.status-font{:href => "#", style: "color: white;"} pending
              %li.status-change{style: "list-style: none;"}
                %a.status-font{:href => "#", style: "color: white;"} applied
              %li.status-change{style: "list-style: none;"}
                %a.status-font{:href => "#", style: "color: white;"} reply

:javascript
  $('form').on('submit', function(e) {
    e.preventDefault();
    if ($('.link').val().search("www.linkedin.com") != -1) {
      $.ajax({
        method: 'post',
        url: '/joblists/add',
        data: $(this).serialize()
      }).success(function(response) {
        $('#error').remove();
        $(".current-jobs").prepend("<li class='job-list'><span><i class='icon-plus'></i>" + response.company + "</span><div style='display: none;'><p>" + response.info + "</p></li>");
      })
    } else {
      $(".scrape").prepend("<h3 id='error' style='color: red;'>LINKEDIN ONLY BRO!</h3>");
    }
  })

  $('.current-jobs').on('click', '.icon-plus',function () {
    $(this).toggleClass('icon-minus');
    $(this).parent().siblings().toggle('fast');
  })

